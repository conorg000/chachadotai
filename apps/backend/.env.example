# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=safetylayer
DB_USER=postgres
DB_PASSWORD=postgres

# Authentication
# In development, this key can be used for testing
DEV_API_KEY=dev-key-12345

# Threat Model Configuration
THREAT_MODEL_PROVIDER=openai
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-5-nano
OPENAI_TIMEOUT=30000
MAX_EVENTS_TO_ANALYZE=50

# Analysis Configuration
# Strategy: 'async' (background, non-blocking) or 'sync' (blocking, waits for analysis)
ANALYSIS_STRATEGY=async
# Enable session analysis on every event (true/false)
ENABLE_SESSION_ANALYSIS=true
# Enable CoT analysis on CoT events (true/false)
ENABLE_COT_ANALYSIS=true
